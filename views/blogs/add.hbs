<!-- Content Header (Page header) -->
<section class="content-header">
   <div class="row">
    <div class="col-sm-6">
      <div class="box box-primary">
  <div class="box-header with-border">
  <h1 class="box-title"></h1>
  <h3>
    Blog/Add blog
  </h3>
  
<form action="/blogs/add" method="post" name="form1">
 <div class="col-xs-12"> 
      <div class="box-body">
        <div class="form-group">
          <label>Title</label>
          <input type="title" name="title" class="form-control" placeholder="write your blog title"/>
           {{#if err.title}}
         <p style="color: red; margin: 0; padding: 0">{{err.title}}</p> 
            {{/if}}
          </p>
        </div>

        <div class="form-group">
          <label>Description</label>
           <textarea id="description" name="description" placeholder="write your blog description.." style="width:100%"></textarea>
            {{#if err.description}}
         <p style="color: red; margin: 0; padding: 0">{{err.description}}</p> 
            {{/if}}
          </p>
       </div>
     </div>
    </div>
          <input type="submit" name="Submit" placeholder="Add" class="btn btn-primary"/>

  </form>
  </section>
