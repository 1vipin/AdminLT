<!-- Content Header (Page header) -->
<section class="content-header">
   <div class="row">
    <div class="col-sm-6">
      <div class="box box-primary">
  <div class="box-header with-border">
  <h1 class="box-title"></h1>
  <h4>
   Categories/New Categories
  </h4>
<form action="/categories/add" method="post" name="form1">
<div class="col-xs-12">
    <div class=" alert-danger" style="position: relative">
      <span style="position: absolute; top: 5; right: 12">x</span>
      {{#if err }}
        {{#each err }}
          <p style="color: #fff">{{ this.msg }}</p>
        {{/each}}
      {{/if}}
    </div>
  </div>
  <div class="box-body">
      <div class="form-group">
          <label>Name</label>
          <input id="name" type="text" name="name" placeholder="name" class="form-control"   />
           <p style="color: red"> &nbsp;
            {{#if err.name}}
              {{err.name}}
            {{/if}}
          </p>
        </div>
       </div>
          <input type="submit" name="Submit" placeholder="Add" class="btn btn-primary"/>
          {{!-- <div class="col-xs-12">
                 {{#if err }}
                    {{#each err }}
                      <p style="color:red">{{ this.msg }}</p>
                    {{/each}}
                  {{/if}}
                  </div> --}}
</form>
</section>