  <div class="login-box-body login">
    <p class="login-box-msg">Sign in to start your session</p>
<form method="post" action="/Auth/login" onsubmit="return Validate()" name = "vform">
  <div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" name="username" placeholder="Username" {{#if user.username}} value={{user.username}} {{/if}}>
    {{#if err.username}}
      <p style="color: red; margin: 0; padding: 0">{{err.username}}</p>
    {{/if}}
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password">
    {{#if err.password}}
      <p style="color: red; margin: 0; padding: 0">{{err.password}}</p>
    {{/if}}
  </div>
  {{#if err.message}}
    <div class="form-group" style="text-align: center">
      <p style="color: red; margin: 0; padding: 0">{{err.message}}</p>
    </div>
  {{/if}}
   
   <div>
