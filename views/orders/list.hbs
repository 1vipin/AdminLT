<style>
  .table-design {
    border-collapse: collapse;
    width: 100%;
  }
  .table-design td, .table-design th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }
  .table-design tr:nth-child(even) {
    background-color: #dddddd;
  }
</style>

<section class="content-header">
  <h1>
    Orders List
  </h1>
<p>Below you will see list of orders.</p>
<a style="border: 1px solid grey; padding: 10px; margin: 10px 0px; width: 88px; display: block; text-align: center; background-color: #1e282c; color: #fff; font-weight: 800" href="/orders/add/">Add</a>
<table width="80%" border="0" class="table-design">
  <tbody>
    <tr style="text-align:left; background-color:#CCC">
      <th>Products</th>
      <th>Categories</th>
      <th>Price</th>
      <th>Name</th>
      <th>Email</th>
      <th>Contact Number</th>
      <th>Address</th>
      <th>Date</th>
      <th>Action</th>
    </tr>
    {{#each orders}}
    <tr>
      <td>{{this.products}}</td>
      <td>{{this.categories}}</td>
      <td>{{this.price}}  </td>
      <td>{{this.name}} </td>
      <td>{{this.email}} </td>
      <td>{{this.contactnumber}} </td>
      <td>{{this.address}} </td>
       <td>{{this.date}} </td>
      <td>
        <div style="float:left">
          <a href="/orders/edit/{{this.id}}">Edit</a> &nbsp; | &nbsp;
          <a href="/orders/delete/{{this.id}}">Delete</a>
        </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
