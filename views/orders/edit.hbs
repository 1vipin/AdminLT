  <![endif]--><section class="content-header">
  <div class="row">
    <div class="col-sm-6">
      <div class="box box-primary">
  <div class="box-header with-border">
  <h3 class="box-title">
   Orders/Update Order
  </h3>
  </div>
<form action="" method="post" name="form1">
   <div class="box-body">
      <div class="form-group">
          <label>Products</label>
           <p style="color: red"> &nbsp;
               {{#if err.products}}
         <p style="color: red; margin: 0; padding: 0">{{err.products}}</p> 
            {{/if}}
          </p>
          <select name="products" style="
    width: 100%;
    height: 33px;
    background-color: #fff;
    border: 1px solid #d2d6de;
">
            <option value="">Select</option>
            <option value="Mobile" >Mobile</option>
            <option value="Tv">Tv</option>
             <option value="Refrigerator">Refrigerator</option>
             <option value="Washing Machine">Washing Machine</option>
          </select>
        </div>
         <div class="form-group">
          <label>Categories</label>
           {{#if err.categories}}
         <p style="color: red; margin: 0; padding: 0">{{err.categories}}</p> 
            {{/if}}
          </p>
          <select name="categories" style="
    width: 100%;
    height: 33px;
    background-color: #fff;
    border: 1px solid #d2d6de;
">
            <option value="">Select</option>
            <option value="Women" >Women</option>
            <option value="Men">Men</option>
             <option value="kids">kids</option>
             <option value="Electronics & Electricals">Electronics & Electricals</option>
             <option value="Other">Other</option>
          </select>
        </div>
        <div class="form-group">
          <label>Price</label>
          <input type="number" name="price" placeholder=" price" class="form-control"  value="{{orders.price}}" />
              {{#if err.price}}
         <p style="color: red; margin: 0; padding: 0">{{err.price}}</p> 
            {{/if}}
          </p>
       </div>
         <div class="form-group">
          <label>Name</label>
          <input id="name" type="text" name="name" placeholder="name" class="form-control" value="{{orders.name}}" />
             {{#if err.name}}
         <p style="color: red; margin: 0; padding: 0">{{err.name}}</p> 
            {{/if}}
          </p>
        </div>
         <div class="form-group">
          <label>Email</label>
          <input id="email" type="text" name="email" placeholder="email" class="form-control" value="{{orders.email}}" />
             {{#if err.email}}
         <p style="color: red; margin: 0; padding: 0">{{err.email}}</p> 
            {{/if}}
          </p>
        </div>
         <div class="form-group">
          <label>Contact Number</label>
          <input type="number" type="text" name="contactnumber" placeholder="contactnumber" class="form-control" value="{{orders.contactnumber}}" />
             {{#if err.contactnumber}}
         <p style="color: red; margin: 0; padding: 0">{{err.contactnumber}}</p> 
            {{/if}}
          </p>
        </div>
         <div class="form-group">
          <label> Address</label>
          <input id="address" type="text" name="address" placeholder="address" class="form-control" value="{{orders.address}}" />
              {{#if err.address}}
         <p style="color: red; margin: 0; padding: 0">{{err.address}}</p> 
            {{/if}}
          </p>
        </div>
        <div class="form-group">
         <label>Date</label>
          <input type="date" name="date" placeholder="date" class="form-control" value="{{orders.date}}" />
        </div>
       </div>
  <div class="box-footer">
    <input type="submit" name="Submit" value="Update" class="btn btn-primary" />
  <input type="hidden" name="_method" value="PUT"/>
  </div>
</form>
</div>
</div>
</div>
