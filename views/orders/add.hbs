<!-- Content Header (Page header) -->
<section class="content-header">
   <div class="row">
    <div class="col-sm-6">
      <div class="box box-primary">
  <div class="box-header with-border">
  <h1 class="box-title"></h1>
  <h3>
    Orders/New Order
  </h3>
<form action="/orders/add" method="post" name="form1">
{{!-- <div class="col-xs-12">
    <div class="alert-danger" style="position: relative">
      <span style="position: absolute; top: 5; right: 12">x</span>
      {{#if err }}
        {{#each err }}
          <p style="color: #fff">{{ this.msg }}</p>
        {{/each}}
      {{/if}}
    </div>
  </div> --}}
  <div class="box-body">
    <div class="form-group">
          <label>Products*</label>
           <p style="color: red"> &nbsp;
            {{#if err.products}}
              {{err.products}}
            {{/if}}
          </p>
          <select name="products" style="
    width: 100%;
    height: 33px;
    background-color: #fff;
    border: 1px solid #d2d6de;
">
            <option value="">Select Products</option>
            <option value="Mobile" >Mobile</option>
            <option value="Tv">Tv</option>
             <option value="Refrigerator">Refrigerator</option>
             <option value="Washing Machine">Washing Machine</option>
          </select>
        </div>

         <div class="form-group">
          <label>Categories*</label>
           <p style="color: red"> &nbsp;
            {{#if err.categories}}
              {{err.categories}}
            {{/if}}
          </p>
          <select name="categories" style="
    width: 100%;
    height: 33px;
    background-color: #fff;
    border: 1px solid #d2d6de;
">
            <option value="">Select</option>
            <option value="Women" >Women</option>
            <option value="Men">Men</option>
             <option value="kids">kids</option>
             <option value="Electronics & Electricals">Electronics & Electricals</option>
          </select>
        </div>
        <div class="form-group">
          <label>Price*</label>
          <input type="number" name="price" placeholder=" price" class="form-control" />
           <p style="color: red"> &nbsp;
            {{#if err.price}}
              {{err.price}}
            {{/if}}
          </p>
       </div>
         <div class="form-group">
          <label>Name*</label>
          <input id="name" type="text" name="name" placeholder="name" class="form-control"  />
           <p style="color: red"> &nbsp;
            {{#if err.name}}
              {{err.name}}
            {{/if}}
          </p>
        </div>
         <div class="form-group">
          <label>Email*</label>
          <input id="email" type="text" name="email" placeholder="email" class="form-control"  />
           <p style="color: red"> &nbsp;
            {{#if err.email}}
              {{err.email}}
            {{/if}}
          </p>
        </div>
         <div class="form-group">
          <label>Contact Number*</label>
          <input type="number" type="text" name="contactnumber" placeholder="contactnumber" class="form-control"  />
           <p style="color: red"> &nbsp;
            {{#if err.contactnumber}}
              {{err.contactnumber}}
            {{/if}}
          </p>
        </div>
         <div class="form-group">
          <label>Address*</label>
          <input id="address" type="text" name="address" placeholder="address" class="form-control"  />
           <p style="color: red"> &nbsp;
            {{#if err.address}}
              {{err.address}}
            {{/if}}
          </p>
        </div>
        <div class="form-group">
         <label>Date*</label>
          <input type="date" name="date" placeholder="date" class="form-control" />
           <p style="color: red"> &nbsp;
            {{#if err.date}}
              {{err.name}}
            {{/if}}
          </p>
        </div>
       </div>
          <input type="submit" name="Submit" placeholder="Add" class="btn btn-primary"/>
