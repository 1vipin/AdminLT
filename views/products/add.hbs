<!-- Content Header (Page header) -->
<section class="content-header">
   <div class="row">
    <div class="col-sm-6">
      <div class="box box-primary">
  <div class="box-header with-border">
  <h1 class="box-title"></h1>
  <h3>
    Products/New Product
  </h3>
<form action="/products/add" method="post" name="form1">
  {{!-- <div class="col-xs-12">
    <div class="alert-danger" style="position: relative">
      <span style="position: absolute; top: 5; right: 12">x</span>
      {{#if err }}
        {{#each err }}
          <p style="color: #fff">{{ this.msg }}</p>
        {{/each}}
      {{/if}}
    </div>
  </div> --}}
        
  <div class="box-body">
      <div class="form-group">
          <label>Name*</label>
          <input id="name" type="text" name="name" placeholder="name" class="form-control"  />
             {{#if err.name}}
         <p style="color: red; margin: 0; padding: 0">{{err.name}}</p> 
            {{/if}}
          </p>
        </div>
         <div class="form-group">
          <label>Categories*</label>
             {{#if err.categories}}
         <p style="color: red; margin: 0; padding: 0">{{err.categories}}</p> 
            {{/if}}
          </p>
          <select name="categories" style="
    width: 100%;
    height: 33px;
    background-color: #fff;
    border: 1px solid #d2d6de;
">
            <option value="">Select Categories</option>
            <option value="Women" >Women</option>
            <option value="Men">Men</option>
             <option value="kids">kids</option>
             <option value="Electronics & Electricals">Electronics & Electricals</option>
          </select>
        </div>
        <div class="form-group">
          <label>Price*</label>
          <input type="number" name="price" placeholder=" price" class="form-control" />
              {{#if err.price}}
         <p style="color: red; margin: 0; padding: 0">{{err.price}}</p> 
            {{/if}}
          </p>
       </div>
        <div class="form-group">
         <label>Date*</label>
          <input type="date" name="date" placeholder="date" class="form-control" />
           <p style="color: red"> &nbsp;
            {{#if err.date}}
              {{err.date}}
            {{/if}}
          </p>
        </div>
       </div>
          <input type="submit" name="Submit" placeholder="Add" class="btn btn-primary"/>
            {{!-- <p class="text-muted" style="color:red;">
                            <strong>*</strong> These fields are required. 
                        </p>
          --}}
</form>
</section>
