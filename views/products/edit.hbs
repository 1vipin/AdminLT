<section class="content-header">
  <div class="row">
    <div class="col-sm-6">
      <div class="box box-primary">
  <div class="box-header with-border">
  <h3 class="box-title">
   Update Product
  </h3>
  </div>
<form action="" method="post" name="form1">
      <div class="form-group">
          <label>Name</label>
          <input id="name" type="text" name="name" placeholder="name" class="form-control" value="{{products.name}}" />
        </div>
         <div class="form-group">
          <label>Categories</label>
          <select name="categories" style="
    width: 100%;
    height: 33px;
    background-color: #fff;
    border: 1px solid #d2d6de;
">
            <option value="">Select</option>
            <option value="Women" >Women</option>
            <option value="Men">Men</option>
             <option value="kids">kids</option>
             <option value="Electronics & Electricals">Electronics & Electricals</option>
             <option value="Other">Other</option>
          </select>
        </div>
        <div class="form-group">
          <label>Price</label>
          <input type="number" name="price" placeholder=" price" class="form-control"  value="{{products.price}}" />
       </div>
       <div class="form-group">
         <label>Quantity</label>
          <input type="number" name="quantity" placeholder="quantity" class="form-control" min="1" max="5" value="{{products.quantity}}"/>
        </div>
        <div class="form-group">
         <label>Date</label>
          <input type="date" name="date" placeholder="date" class="form-control"  value="{{products.date}}"/>
        </div>
       </div>
  <div class="box-footer">
    <input type="submit" name="Submit" value="Update" class="btn btn-primary" />
  <input type="hidden" name="_method" value="PUT"/>
  </div>
</form>
</div>
</div>
</div>
</section>